<Window x:Class="WR_Prüfungen.Pfad_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WR_Prüfungen"
        mc:Ignorable="d"
        Title="Importpfad" Height="150" Width="434" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label x:Name="label" Content="Pfad:" HorizontalAlignment="Left" Margin="5,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_Pfad" HorizontalAlignment="Left" Height="23" Margin="50,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="240"/>

        <Button x:Name="button_SpeichernUndSchließen" Content="Speichern und Schließen" HorizontalAlignment="Left" Margin="51,78,0,0" VerticalAlignment="Top" Width="150" Height="29" Click="button_ExportierenUndSchließen_Click"/>
        <Button x:Name="button_Pfad_auswählen" Content="Auswählen" HorizontalAlignment="Left" Margin="296,31,0,0" VerticalAlignment="Top" Width="120" Height="23" Click="button_Pfad_auswählen_Click" />

    </Grid>
</Window>
